{
  "manifest_version": 3,
  "name": "FocusGram",
  "version": "1.0",
  "description": "Removes all distractions from Instagram so you can focus.",
  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.instagram.com/*"
      ],
      "js": [
        "rules.js",
        "utils.js",
        "content.js"
      ]
    }
  ],
  "permissions": [],
  "host_permissions": [
    "*://www.instagram.com/*"
  ]
}
